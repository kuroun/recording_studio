<h1>Listing bookings</h1>

<table>
  <thead>
    <tr>
      <th>Band Name</th>
      <th>Session</th>
      <th>Recording date</th>
      <th>Contact Name</th>
      <th>Contact</th>
      <th>Status</th>
      <th>Comment</th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.user.band_name %></td>
        <td><%= booking.recording_session.start_time.to_s(:time) + " - " + booking.recording_session.end_time.to_s(:time)%></td>
        <td><%= booking.recording_date %></td>
        <td><%= booking.user.contact_name %></td>
        <td><%= booking.user.contact_number %></td>
        <td><%= booking_status(booking.recording_date)%></td>
        <td><%= booking.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>
