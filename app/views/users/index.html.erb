<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Band name</th>
      <th>Contact name</th>
      <th>Contact number</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.band_name %></td>
        <td><%= user.contact_name %></td>
        <td><%= user.contact_number %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
